#!/bin/bash

if [[ $1 == 'init' ]]; then
    # Just initializing root privileges.
    exit 0
elif [[ $1 == 'chmod' ]]; then
    # Change file permissions.
    chmod "$2" "$3"
elif [[ $1 == 'cp' ]]; then
    # Copying with root privileges.
    cp "$2" "$3"
elif [[ $1 == 'rm' ]]; then
    # Remove file.
    rm "$2"
fi
